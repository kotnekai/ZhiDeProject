<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/pay_failed" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="充值成功"
        android:textColor="@color/dark_text_blue_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvPayAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="100.00元"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvGoBack"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvPayAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/com_btn_blue_10r_bg_shape"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>