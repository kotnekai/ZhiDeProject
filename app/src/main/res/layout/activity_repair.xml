<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue_light_color"
    android:orientation="vertical"
    tools:context=".view.activity.RepairActivity">

    <RelativeLayout
        android:id="@+id/rlSelectDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawableEnd="@mipmap/inside_bottom"
            android:text="设备" />

        <TextView
            android:id="@+id/tvSelectDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:text="请选择"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/divider_color"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:id="@+id/rlSelectType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawableEnd="@mipmap/inside_bottom"
            android:text="故障现象" />

        <TextView
            android:id="@+id/tvSelectFault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="35dp"
            android:text="请选择"
            android:textSize="12sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/divider_color"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="房间号" />

        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="生活区1栋1楼" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="故障详情描述："
        android:minHeight="200dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/com_btn_blue_5r_bg_shape"
        android:gravity="center"
        android:text="@string/repair_confirm"
        android:textColor="@color/white" />
</LinearLayout>