<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RechargeActivity">

    <TextView
        android:id="@+id/tvTotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="0.0"
        android:textColor="@color/green_color"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="账户基本余额："
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvCashBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvTotalBalance"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="0.0"
        android:textSize="@dimen/com_text_size_12sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalBalance"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"

        android:text="现金余额："
        android:textSize="@dimen/com_text_size_12sp" />

    <TextView
        android:id="@+id/tvGiftBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvCashBalance"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="0.0"
        android:textSize="@dimen/com_text_size_12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCashBalance"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="赠送余额："

        android:textSize="@dimen/com_text_size_12sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/tvGiftBalance"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/tvChargeTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="充值金额" />

    <TextView
        android:id="@+id/tvCharge30"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvChargeTip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/com_btn_line_bg_blue_black_selector"
        android:gravity="center"
        android:text="30元"
        android:textColor="@drawable/com_text_white_blue_selector" />

    <TextView
        android:id="@+id/tvCharge40"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvChargeTip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tvCharge30"
        android:background="@drawable/com_btn_line_bg_blue_black_selector"
        android:gravity="center"
        android:text="40元"
        android:textColor="@drawable/com_text_white_blue_selector" />

    <TextView
        android:id="@+id/tvCharge50"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvChargeTip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tvCharge40"
        android:background="@drawable/com_btn_line_bg_blue_black_selector"
        android:gravity="center"
        android:text="50元"
        android:textColor="@drawable/com_text_white_blue_selector" />

    <TextView
        android:id="@+id/tvCharge80"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvCharge30"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/com_btn_line_bg_blue_black_selector"
        android:gravity="center"
        android:text="80元"
        android:textColor="@drawable/com_text_white_blue_selector" />

    <TextView
        android:id="@+id/tvCharge100"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvCharge30"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tvCharge30"
        android:background="@drawable/com_btn_line_bg_blue_black_selector"
        android:gravity="center"
        android:text="100元"
        android:textColor="@drawable/com_text_white_blue_selector" />

    <TextView
        android:id="@+id/tvChargeOther"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvCharge30"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tvCharge40"
        android:background="@drawable/com_btn_line_bg_blue_black_selector"
        android:gravity="center"
        android:hint="其他"
        android:text=""
        android:textColor="@drawable/com_text_white_blue_selector"
        android:textColorHint="@drawable/com_text_white_blue_selector"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCharge80"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChargeActTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/charge_act_introduce"
            android:textColor="@color/light_text_blue_color" />

        <TextView
            android:id="@+id/tvIntroActContent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="暂无活动" />

        <TextView
            android:id="@+id/tvChargeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/charge_introduce"
            android:textColor="@color/light_text_blue_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvIntroContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/charge_IntroContent"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/main_light_blue_color"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="支付方式："
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbSelectWxPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/weixin" />

            <CheckBox
                android:id="@+id/cbSelectAliPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableRight="@mipmap/alipay" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvReCharge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/com_btn_blue_5r_bg_shape"
        android:gravity="center"
        android:text="确认充值"
        android:textColor="@color/white" />

</RelativeLayout>